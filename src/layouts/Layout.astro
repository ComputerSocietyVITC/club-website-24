    <body>
        <slot>Base Layout</slot>
    </body>
</html>
<style is:global>
    :root {
        --accent-from: #070721; /* Updated color */
        --accent-to: #031c3b; /* Updated color */
        --accent-gradient: linear-gradient(
            to top,
            /* Updated direction */ var(--accent-from),
            /* Start color */ var(--accent-to) /* End color */
        );
    }

    html {
        background-image: var(--accent-gradient);
        background-color: var(
            --accent-from
        ); /* Updated to match the start color of the gradient */
        cursor: url("/assets/cursor.svg"), auto;
    }

    body {
        -ms-overflow-style: none; /* Internet Explorer 10+ */
        scrollbar-width: none; /* Firefox */
        scroll-behavior: smooth;
    }

    ::-webkit-scrollbar {
        display: none;
    }

    * {
        font-family: "Montserrat", sans-serif;
    }

    .custom-underline {
        position: relative;
        text-decoration: none;
    }

    .custom-underline::after {
        content: "";
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 2px;
        background-color: #10b981;
        transition:
            width 0.3s ease-in-out,
            left 0.3s ease-in-out;
    }

    .custom-underline:hover::after {
        width: 100%;
        left: 0;
    }
</style>
